<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SecurePass" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">#f7f7f2</item>
        <item name="colorPrimaryVariant">#000</item>
        <item name="colorOnPrimary">#000</item>
        <item name="android:windowBackground">#f7f7f2</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">#022b3a</item>

        <item name="android:titleTextColor">#000</item>
        <item name="actionBarSize">75dp</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextStyle</item>
    </style>

    <!-- Змінюємо розмір тексту для title в action bar -->
    <style name="MyActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">30sp</item> <!-- Розмір тексту, змініть потрібний розмір тут -->
    </style>

    <style name="Theme.SecurePass.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>